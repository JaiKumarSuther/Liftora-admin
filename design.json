{
    "adminPanelDesignSystem": {
      "overview": {
        "style": "Dark mode admin dashboard matching mobile app aesthetic",
        "theme": "Modern, minimal, high-contrast dark UI with coral accents",
        "layout": "Sidebar navigation with responsive main content area",
        "target": "Desktop-first with responsive tablet/mobile views"
      },
      "colorPalette": {
        "primary": {
          "main": "#FF6B6B",
          "hover": "#FF5252",
          "light": "#FF8787",
          "description": "Coral/salmon red for CTAs, active states, and highlights"
        },
        "background": {
          "app": "#0F0F0F",
          "sidebar": "#1A1A1A",
          "card": "#1A1A1A",
          "elevated": "#242424",
          "input": "#242424",
          "hover": "#2D2D2D"
        },
        "text": {
          "primary": "#FFFFFF",
          "secondary": "#B0B0B0",
          "tertiary": "#808080",
          "disabled": "#5A5A5A"
        },
        "border": {
          "primary": "#2A2A2A",
          "secondary": "#3A3A3A",
          "focus": "#FF6B6B"
        },
        "semantic": {
          "success": {
            "main": "#4CAF50",
            "bg": "rgba(76,175,80,0.15)",
            "border": "rgba(76,175,80,0.3)"
          },
          "warning": {
            "main": "#FFA726",
            "bg": "rgba(255,167,38,0.15)",
            "border": "rgba(255,167,38,0.3)"
          },
          "error": {
            "main": "#EF5350",
            "bg": "rgba(239,83,80,0.15)",
            "border": "rgba(239,83,80,0.3)"
          },
          "info": {
            "main": "#29B6F6",
            "bg": "rgba(41,182,246,0.15)",
            "border": "rgba(41,182,246,0.3)"
          }
        }
      },
      "typography": {
        "fontFamily": {
          "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif",
          "mono": "'Fira Code', 'Consolas', monospace"
        },
        "scale": {
          "h1": {
            "size": "32px",
            "weight": "700",
            "lineHeight": "1.2",
            "letterSpacing": "-0.5px",
            "usage": "Page titles"
          },
          "h2": {
            "size": "24px",
            "weight": "600",
            "lineHeight": "1.3",
            "letterSpacing": "-0.3px",
            "usage": "Section headers"
          },
          "h3": {
            "size": "20px",
            "weight": "600",
            "lineHeight": "1.4",
            "usage": "Card titles, modal headers"
          },
          "h4": {
            "size": "16px",
            "weight": "600",
            "lineHeight": "1.4",
            "usage": "Subsection titles"
          },
          "body": {
            "size": "14px",
            "weight": "400",
            "lineHeight": "1.6",
            "usage": "Primary content"
          },
          "small": {
            "size": "12px",
            "weight": "400",
            "lineHeight": "1.5",
            "usage": "Helper text, captions"
          },
          "tiny": {
            "size": "11px",
            "weight": "500",
            "lineHeight": "1.4",
            "textTransform": "uppercase",
            "letterSpacing": "0.5px",
            "usage": "Labels, badges"
          }
        }
      },
      "layout": {
        "structure": {
          "sidebar": {
            "width": {
              "expanded": "260px",
              "collapsed": "72px"
            },
            "position": "fixed left",
            "background": "#1A1A1A",
            "zIndex": "1000",
            "transition": "width 0.3s ease"
          },
          "topBar": {
            "height": "72px",
            "position": "fixed top",
            "background": "#242424",
            "borderBottom": "1px solid #2A2A2A",
            "zIndex": "999",
            "marginLeft": "Sidebar width"
          },
          "mainContent": {
            "marginLeft": "Sidebar width",
            "marginTop": "72px",
            "padding": "32px",
            "minHeight": "calc(100vh - 72px)",
            "background": "#0F0F0F"
          }
        },
        "grid": {
          "columns": "12",
          "gap": "24px",
          "container": {
            "maxWidth": "1600px",
            "padding": "0 32px"
          }
        },
        "spacing": {
          "xs": "4px",
          "sm": "8px",
          "md": "16px",
          "lg": "24px",
          "xl": "32px",
          "2xl": "48px",
          "3xl": "64px"
        },
        "borderRadius": {
          "sm": "6px",
          "md": "8px",
          "lg": "12px",
          "xl": "16px",
          "full": "9999px"
        }
      },
      "components": {
        "sidebar": {
          "structure": {
            "logo": {
              "height": "72px",
              "padding": "20px",
              "borderBottom": "1px solid #2A2A2A",
              "alignment": "center or left"
            },
            "navigation": {
              "padding": "16px 12px"
            },
            "footer": {
              "position": "absolute bottom",
              "padding": "16px",
              "borderTop": "1px solid #2A2A2A"
            }
          },
          "menuItem": {
            "height": "44px",
            "padding": "10px 16px",
            "margin": "4px 0",
            "borderRadius": "8px",
            "gap": "12px",
            "iconSize": "20px",
            "fontSize": "14px",
            "fontWeight": "500",
            "transition": "all 0.2s ease",
            "states": {
              "default": {
                "background": "transparent",
                "color": "#B0B0B0"
              },
              "hover": {
                "background": "#242424",
                "color": "#FFFFFF"
              },
              "active": {
                "background": "#FF6B6B",
                "color": "#FFFFFF",
                "fontWeight": "600",
                "indicator": "4px left border or full background"
              }
            }
          },
          "sectionLabel": {
            "fontSize": "11px",
            "fontWeight": "600",
            "color": "#808080",
            "textTransform": "uppercase",
            "letterSpacing": "0.8px",
            "padding": "16px 16px 8px",
            "marginTop": "16px"
          },
          "collapseButton": {
            "position": "Bottom of sidebar or in header",
            "size": "32px",
            "borderRadius": "6px",
            "background": "#242424",
            "icon": "chevron left/right"
          }
        },
        "topBar": {
          "structure": {
            "left": {
              "content": "Breadcrumbs or page title",
              "padding": "0 24px"
            },
            "center": {
              "content": "Search bar (optional)",
              "maxWidth": "500px"
            },
            "right": {
              "content": "Actions, notifications, profile",
              "padding": "0 24px",
              "gap": "12px"
            }
          },
          "searchBar": {
            "width": "400px",
            "height": "40px",
            "background": "#1A1A1A",
            "border": "1px solid #2A2A2A",
            "borderRadius": "8px",
            "padding": "0 16px",
            "fontSize": "14px",
            "iconSize": "18px",
            "iconColor": "#808080",
            "focus": {
              "border": "1px solid #3A3A3A",
              "background": "#242424"
            }
          },
          "iconButton": {
            "size": "40px",
            "borderRadius": "8px",
            "background": "transparent",
            "iconSize": "20px",
            "iconColor": "#B0B0B0",
            "hover": {
              "background": "#1A1A1A"
            },
            "badge": {
              "size": "18px",
              "background": "#FF6B6B",
              "position": "top-right",
              "fontSize": "10px",
              "fontWeight": "700"
            }
          },
          "profileDropdown": {
            "trigger": {
              "display": "flex",
              "gap": "12px",
              "padding": "6px 12px 6px 6px",
              "borderRadius": "8px",
              "hover": {
                "background": "#1A1A1A"
              }
            },
            "avatar": {
              "size": "32px",
              "borderRadius": "full"
            },
            "dropdown": {
              "width": "240px",
              "background": "#242424",
              "border": "1px solid #2A2A2A",
              "borderRadius": "10px",
              "shadow": "0 8px 24px rgba(0,0,0,0.6)",
              "marginTop": "8px"
            }
          }
        },
        "cards": {
          "base": {
            "background": "#1A1A1A",
            "border": "1px solid #2A2A2A",
            "borderRadius": "12px",
            "padding": "24px",
            "shadow": "0 2px 8px rgba(0,0,0,0.3)",
            "transition": "all 0.2s ease"
          },
          "statCard": {
            "minHeight": "140px",
            "display": "flex column",
            "gap": "12px",
            "elements": {
              "icon": {
                "size": "40px",
                "borderRadius": "8px",
                "background": "rgba(255,107,107,0.15)",
                "color": "#FF6B6B",
                "padding": "8px"
              },
              "label": {
                "fontSize": "13px",
                "color": "#B0B0B0",
                "fontWeight": "500"
              },
              "value": {
                "fontSize": "28px",
                "color": "#FFFFFF",
                "fontWeight": "700"
              },
              "change": {
                "fontSize": "12px",
                "fontWeight": "600",
                "display": "flex items-center",
                "gap": "4px",
                "positive": {
                  "color": "#4CAF50"
                },
                "negative": {
                  "color": "#EF5350"
                }
              }
            }
          },
          "chartCard": {
            "header": {
              "display": "flex justify-between",
              "marginBottom": "20px",
              "title": {
                "fontSize": "18px",
                "fontWeight": "600"
              },
              "actions": {
                "display": "flex",
                "gap": "8px"
              }
            },
            "body": {
              "minHeight": "300px",
              "padding": "16px 0"
            }
          },
          "listCard": {
            "header": {
              "borderBottom": "1px solid #2A2A2A",
              "padding": "0 0 16px 0",
              "marginBottom": "16px"
            },
            "item": {
              "padding": "12px 0",
              "borderBottom": "1px solid #2A2A2A",
              "lastChild": {
                "borderBottom": "none"
              }
            }
          }
        },
        "buttons": {
          "primary": {
            "height": "40px",
            "padding": "0 20px",
            "background": "#FF6B6B",
            "color": "#FFFFFF",
            "borderRadius": "8px",
            "fontSize": "14px",
            "fontWeight": "600",
            "border": "none",
            "transition": "all 0.2s ease",
            "hover": {
              "background": "#FF5252",
              "transform": "translateY(-1px)",
              "shadow": "0 4px 12px rgba(255,107,107,0.4)"
            },
            "active": {
              "transform": "translateY(0)"
            },
            "disabled": {
              "background": "#3A3A3A",
              "color": "#808080",
              "cursor": "not-allowed"
            }
          },
          "secondary": {
            "background": "#2D2D2D",
            "color": "#FFFFFF",
            "border": "1px solid #3A3A3A",
            "hover": {
              "background": "#3A3A3A",
              "borderColor": "#4A4A4A"
            }
          },
          "outline": {
            "background": "transparent",
            "color": "#FF6B6B",
            "border": "1px solid #FF6B6B",
            "hover": {
              "background": "rgba(255,107,107,0.1)"
            }
          },
          "ghost": {
            "background": "transparent",
            "color": "#B0B0B0",
            "border": "none",
            "hover": {
              "background": "#242424",
              "color": "#FFFFFF"
            }
          },
          "icon": {
            "size": "40px",
            "padding": "0",
            "background": "transparent",
            "border": "1px solid #3A3A3A",
            "borderRadius": "8px",
            "hover": {
              "background": "#242424"
            }
          },
          "sizes": {
            "sm": {
              "height": "32px",
              "padding": "0 12px",
              "fontSize": "13px"
            },
            "md": {
              "height": "40px",
              "padding": "0 20px",
              "fontSize": "14px"
            },
            "lg": {
              "height": "48px",
              "padding": "0 24px",
              "fontSize": "15px"
            }
          }
        },
        "forms": {
          "inputField": {
            "height": "44px",
            "padding": "0 16px",
            "background": "#242424",
            "border": "1px solid #3A3A3A",
            "borderRadius": "8px",
            "fontSize": "14px",
            "color": "#FFFFFF",
            "placeholder": {
              "color": "#808080"
            },
            "focus": {
              "border": "1px solid #FF6B6B",
              "outline": "none",
              "shadow": "0 0 0 3px rgba(255,107,107,0.1)"
            },
            "error": {
              "border": "1px solid #EF5350",
              "shadow": "0 0 0 3px rgba(239,83,80,0.1)"
            },
            "disabled": {
              "background": "#1A1A1A",
              "color": "#5A5A5A",
              "cursor": "not-allowed"
            }
          },
          "textarea": {
            "minHeight": "120px",
            "padding": "12px 16px",
            "resize": "vertical"
          },
          "label": {
            "fontSize": "13px",
            "fontWeight": "600",
            "color": "#B0B0B0",
            "marginBottom": "8px",
            "display": "block"
          },
          "helperText": {
            "fontSize": "12px",
            "color": "#808080",
            "marginTop": "6px"
          },
          "errorText": {
            "fontSize": "12px",
            "color": "#EF5350",
            "marginTop": "6px"
          },
          "select": {
            "height": "44px",
            "appearance": "none",
            "backgroundImage": "url(chevron-down-icon)",
            "backgroundPosition": "right 12px center",
            "paddingRight": "40px",
            "dropdown": {
              "background": "#242424",
              "border": "1px solid #3A3A3A",
              "borderRadius": "8px",
              "shadow": "0 8px 24px rgba(0,0,0,0.5)",
              "maxHeight": "280px",
              "overflow": "auto"
            },
            "option": {
              "padding": "10px 16px",
              "fontSize": "14px",
              "hover": {
                "background": "#2D2D2D"
              },
              "selected": {
                "background": "#3A3A3A",
                "color": "#FF6B6B"
              }
            }
          },
          "checkbox": {
            "size": "20px",
            "borderRadius": "4px",
            "border": "2px solid #3A3A3A",
            "background": "transparent",
            "checked": {
              "background": "#FF6B6B",
              "border": "#FF6B6B",
              "checkmark": "#FFFFFF"
            },
            "hover": {
              "border": "#4A4A4A"
            }
          },
          "radio": {
            "size": "20px",
            "borderRadius": "full",
            "border": "2px solid #3A3A3A",
            "checked": {
              "border": "#FF6B6B",
              "innerCircle": {
                "size": "10px",
                "background": "#FF6B6B"
              }
            }
          },
          "switch": {
            "width": "44px",
            "height": "24px",
            "borderRadius": "full",
            "background": "#3A3A3A",
            "thumb": {
              "size": "18px",
              "background": "#FFFFFF",
              "transition": "transform 0.2s ease"
            },
            "checked": {
              "background": "#FF6B6B",
              "thumbTransform": "translateX(20px)"
            }
          },
          "formGroup": {
            "marginBottom": "24px"
          },
          "formRow": {
            "display": "grid",
            "gridTemplateColumns": "repeat(auto-fit, minmax(200px, 1fr))",
            "gap": "16px"
          }
        },
        "tables": {
          "container": {
            "background": "#1A1A1A",
            "border": "1px solid #2A2A2A",
            "borderRadius": "12px",
            "overflow": "hidden"
          },
          "header": {
            "background": "#242424",
            "borderBottom": "1px solid #2A2A2A"
          },
          "headerCell": {
            "padding": "16px 20px",
            "fontSize": "12px",
            "fontWeight": "600",
            "color": "#B0B0B0",
            "textTransform": "uppercase",
            "letterSpacing": "0.5px",
            "sortable": {
              "cursor": "pointer",
              "hover": {
                "color": "#FFFFFF"
              }
            }
          },
          "row": {
            "borderBottom": "1px solid #2A2A2A",
            "transition": "background 0.15s ease",
            "hover": {
              "background": "#242424"
            },
            "selected": {
              "background": "#2D2D2D",
              "borderLeft": "3px solid #FF6B6B"
            }
          },
          "cell": {
            "padding": "16px 20px",
            "fontSize": "14px",
            "color": "#FFFFFF",
            "verticalAlign": "middle"
          },
          "pagination": {
            "padding": "16px 20px",
            "borderTop": "1px solid #2A2A2A",
            "display": "flex justify-between items-center",
            "background": "#1A1A1A"
          },
          "checkbox": {
            "width": "40px",
            "textAlign": "center"
          },
          "actions": {
            "display": "flex",
            "gap": "8px",
            "justifyContent": "flex-end"
          }
        },
        "modals": {
          "overlay": {
            "background": "rgba(0,0,0,0.75)",
            "backdropFilter": "blur(4px)",
            "zIndex": "9999"
          },
          "dialog": {
            "background": "#1A1A1A",
            "border": "1px solid #2A2A2A",
            "borderRadius": "16px",
            "shadow": "0 20px 60px rgba(0,0,0,0.7)",
            "maxWidth": "600px",
            "width": "90%",
            "maxHeight": "90vh",
            "overflow": "auto"
          },
          "header": {
            "padding": "24px 24px 20px",
            "borderBottom": "1px solid #2A2A2A",
            "display": "flex justify-between items-center",
            "title": {
              "fontSize": "20px",
              "fontWeight": "600",
              "color": "#FFFFFF"
            },
            "closeButton": {
              "size": "32px",
              "borderRadius": "6px",
              "background": "transparent",
              "hover": {
                "background": "#242424"
              }
            }
          },
          "body": {
            "padding": "24px"
          },
          "footer": {
            "padding": "20px 24px 24px",
            "borderTop": "1px solid #2A2A2A",
            "display": "flex justify-end",
            "gap": "12px"
          },
          "sizes": {
            "sm": "400px",
            "md": "600px",
            "lg": "800px",
            "xl": "1000px",
            "full": "95vw"
          }
        },
        "dropdowns": {
          "trigger": {
            "display": "inline-flex items-center",
            "gap": "8px",
            "padding": "8px 12px",
            "borderRadius": "8px",
            "fontSize": "14px",
            "hover": {
              "background": "#242424"
            }
          },
          "menu": {
            "background": "#242424",
            "border": "1px solid #2A2A2A",
            "borderRadius": "10px",
            "shadow": "0 8px 24px rgba(0,0,0,0.6)",
            "padding": "8px",
            "minWidth": "200px",
            "maxHeight": "400px",
            "overflow": "auto"
          },
          "item": {
            "padding": "10px 12px",
            "borderRadius": "6px",
            "fontSize": "14px",
            "color": "#FFFFFF",
            "cursor": "pointer",
            "display": "flex items-center",
            "gap": "12px",
            "hover": {
              "background": "#2D2D2D"
            },
            "icon": {
              "size": "18px",
              "color": "#B0B0B0"
            }
          },
          "divider": {
            "height": "1px",
            "background": "#2A2A2A",
            "margin": "8px 0"
          }
        },
        "tabs": {
          "container": {
            "borderBottom": "1px solid #2A2A2A"
          },
          "list": {
            "display": "flex",
            "gap": "4px",
            "padding": "0 0 0 0"
          },
          "tab": {
            "padding": "12px 20px",
            "fontSize": "14px",
            "fontWeight": "500",
            "color": "#B0B0B0",
            "background": "transparent",
            "border": "none",
            "borderBottom": "2px solid transparent",
            "cursor": "pointer",
            "transition": "all 0.2s ease",
            "hover": {
              "color": "#FFFFFF",
              "background": "#242424"
            },
            "active": {
              "color": "#FF6B6B",
              "borderBottom": "2px solid #FF6B6B",
              "fontWeight": "600"
            }
          },
          "panel": {
            "padding": "24px 0"
          }
        },
        "badges": {
          "base": {
            "display": "inline-flex",
            "alignItems": "center",
            "height": "22px",
            "padding": "0 10px",
            "borderRadius": "full",
            "fontSize": "11px",
            "fontWeight": "600",
            "letterSpacing": "0.3px"
          },
          "variants": {
            "success": {
              "background": "rgba(76,175,80,0.2)",
              "color": "#4CAF50",
              "border": "1px solid rgba(76,175,80,0.3)"
            },
            "warning": {
              "background": "rgba(255,167,38,0.2)",
              "color": "#FFA726",
              "border": "1px solid rgba(255,167,38,0.3)"
            },
            "error": {
              "background": "rgba(239,83,80,0.2)",
              "color": "#EF5350",
              "border": "1px solid rgba(239,83,80,0.3)"
            },
            "info": {
              "background": "rgba(41,182,246,0.2)",
              "color": "#29B6F6",
              "border": "1px solid rgba(41,182,246,0.3)"
            },
            "neutral": {
              "background": "rgba(176,176,176,0.2)",
              "color": "#B0B0B0",
              "border": "1px solid rgba(176,176,176,0.3)"
            },
            "primary": {
              "background": "rgba(255,107,107,0.2)",
              "color": "#FF6B6B",
              "border": "1px solid rgba(255,107,107,0.3)"
            }
          },
          "dot": {
            "size": "6px",
            "borderRadius": "full",
            "marginRight": "6px"
          }
        },
        "notifications": {
          "toast": {
            "position": "fixed top-right",
            "top": "24px",
            "right": "24px",
            "width": "380px",
            "background": "#242424",
            "border": "1px solid #3A3A3A",
            "borderRadius": "12px",
            "padding": "16px",
            "shadow": "0 12px 32px rgba(0,0,0,0.6)",
            "display": "flex",
            "gap": "12px",
            "animation": "slideInRight 0.3s ease",
            "leftBorder": "3px solid [semantic-color]"
          },
          "icon": {
            "size": "24px",
            "flexShrink": "0"
          },
          "content": {
            "flex": "1",
            "title": {
              "fontSize": "14px",
              "fontWeight": "600",
              "color": "#FFFFFF",
              "marginBottom": "4px"
            },
            "message": {
              "fontSize": "13px",
              "color": "#B0B0B0",
